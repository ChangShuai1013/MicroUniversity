<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.changshuai.microuniversity.SecondHandDetailActivity">

    <include layout="@layout/layout_action_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/shd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/shd_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shd_name"
            android:layout_marginTop="5dp"
            android:text="description"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/shd_price"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="price"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"/>

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/shd_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/shd_btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="联系他"/>
</LinearLayout>
